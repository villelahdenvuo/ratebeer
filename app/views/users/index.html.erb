<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <th> </th>
    <th> rated beers </th>
    <th> total ratings </th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.beers.uniq.size %></td>
        <td><%= user.ratings.size %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Sign up', new_user_path, class:'btn btn-primary' %>
